<UserControl x:Class="Control_De_Usuario.ParametrosRectangulo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Control_De_Usuario"
             mc:Ignorable="d" Height="255" Width="285">
    <Grid Margin="0,0,49.8,15.2">
        <TextBox x:Name="txtaltura" HorizontalAlignment="Left" Height="50" Margin="80,65,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="125"/>
        <TextBox x:Name="txtbase" HorizontalAlignment="Left" Height="50" Margin="80,180,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="125" TextChanged="TextBox_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="80,20,0,0" TextWrapping="Wrap" Text="Altura" VerticalAlignment="Top" Height="35" Width="125"/>
        <TextBlock HorizontalAlignment="Left" Margin="80,135,0,0" TextWrapping="Wrap" Text="Base" VerticalAlignment="Top" Height="35" Width="125"/>

    </Grid>
</UserControl>
